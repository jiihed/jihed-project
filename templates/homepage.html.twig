{% extends 'base.html.twig' %}

{% block body %}
<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
</head>
<body>
  
  
  <header style = "height: 100px; width: 100%; background-color: #607D8B;" >
    <h1 style=" color: #fff; text-align: center; padding-top: 25px; font-size: 30px;" > MUSIC STORE </h1>
    </header>
    <h1>PRODUCTS:</h1>
    {% for product in product%}
    
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{product.ImgLink}}" alt="product image">
        <div class="card-body">
          <h5 class="card-title">{{ product.Name }}</h5>
          <p class="card-text">Cliquez sur le bouton pour voir plus de détails</p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">{{product.id }}</li>
          
        </ul>
        <div class="card-body">
          <a href="{{path('product_information',{id: product.id})}}" class="card-link">détail</a>
        
        </div>
      </div>
      
      {% endfor %}
      
  
</body>
<footer style = " height: 100px; background-color:#607D8B; width: 100%; text-align: center;">
  <h3 style = " color: #fff; text-align: center; padding-top: 10px; font-size: 30px; " >Footer Section</h3>
  <p> © Copyright ( GLEI Jihed) </p>
  </footer>
</html>
{% endblock %}
